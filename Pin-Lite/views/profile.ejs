<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadForm" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center mt-[40px]">
            <div class="relative">
                <span id="uploadIcon"
                    class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <i class="ri-pencil-fill text-zinc-800"></i>
                </span>
                <div class="w-32 h-32 rounded-full bg-zinc-200 overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage%>"
                        alt="">
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-5"><%= user.fullname%></h1>
            <h3 class="text-md">@<%= user.username%></h3>
            <a href="/edit" class="px-10 py-3 mt-5 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-10">Add New Post</a>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
            <div>
                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover"
                        src="/images/uploads/<%=user.posts[0]?.image%>"
                        alt="">
                </div>
                <h3 class="text-xl font-semibold mt-3">Your Uploaded Posts</h3>
                <a href="/show/posts" class="text-sm font-medium opacity-60"><%=user.posts?.length%> Pins</a>
            </div>

        </div>
    </div>

    <script>
        document.querySelector("#uploadIcon").addEventListener("click", function () {
            document.querySelector('#uploadForm input').click();
        });

        document.querySelector("#uploadForm input").addEventListener("change", function () {
            document.querySelector('#uploadForm').submit();
        });
    </script>
    <% include ./partials/footer.ejs %>